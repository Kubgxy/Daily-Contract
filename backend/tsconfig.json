{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // ✅ เพิ่ม 2 บรรทัดนี้เข้าไป
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*", "@types"],
  "exclude": ["node_modules", "dist"]
}
